[Unit]
Description=Nutra Server (Sanic / PostgreSQL)

[Service]
User=github
ExecStart=/usr/bin/env python3 -m ntserv
Restart=always
Environment="NTSERV_ENV=prod" "NTSERV_SERVER_HOST=https://nutra.tk" "NTSERV_N_WORKERS=2" "NTSERV_PSQL_PASSWORD=" "NTSERV_JWT_SECRET=" "NTSERV_PROXY_SECRET="

[Install]
WantedBy=multi-user.target
