[Unit]
Description=NT Server (Sanic / Postgres)

[Service]
User=github
ExecStart=/usr/bin/env python3 -m sanic ntserv.routes:app --host=127.0.0.1 --port=20000 --workers=2
Restart=always
Environment="NTSERV_ENV=prod" "NTSERV_SERVER_HOST=https://nutra.tk" "NTSERV_PSQL_PASSWORD=" "NTSERV_JWT_SECRET=" "NTSERV_PROXY_SECRET="

[Install]
WantedBy=multi-user.target
